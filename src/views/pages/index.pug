   body 
      header.main-header
         h1.title IP Address Tracker
         form#form.form(action="#")
            input.form__search(
               type="search",
               name="ip",
               placeholder="Search for any IP address or domain",
               aria-label="Search IP",
               title="Type a valid IP adress",
               pattern="^(?:[0-9]{1,3}\.){3}[0-9]{1,3}$",
               required
            )
            button.form__submit(aria-label="Submit")
      main.main
         dl.data
            .data__card
               dt.data__term IP Address
               dd#ip-adress.data__value

            .data__card
               dt.data__term Location
               dd#location.data__value

            .data__card
               dt.data__term Timezone
               dd#timezone.data__value

            .data__card
               dt.data__term ISP
               dd#provider.data__value

         .map#mapid
      script(src="js/scripts-min.js")